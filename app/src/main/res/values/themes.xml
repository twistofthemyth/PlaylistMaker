<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker"></style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentInsetStartWithNavigation">@dimen/default_padding</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="titleMarginTop">2dp</item>
    </style>

    <style name="MainScreenButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/default_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="cornerRadius">@dimen/button_corner</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/default_padding</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/default_padding</item>
        <item name="android:paddingVertical">@dimen/list_item_vertical_padding</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsItemSwitch" parent="SettingsItemTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="thumbTintMode">src_in</item>
    </style>

    <style name="SwitchStyle" parent="">
        <item name="colorSecondary">@color/background_main</item>
    </style>

</resources>