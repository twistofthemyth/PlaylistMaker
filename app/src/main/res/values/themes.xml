<resources>

    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="colorPrimary">@color/primary_color</item>
    </style>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="contentInsetStartWithNavigation">@dimen/default_padding</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
        <item name="android:titleTextColor">@color/text_color</item>
    </style>

    <style name="ToolbarWithBackButton" parent="Toolbar">
        <item name="navigationIcon">@drawable/ic_toolbar_back</item>
    </style>

    <style name="PM.Tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/text_color</item>
        <item name="tabTextAppearance">@style/PM.Text.Tab</item>
        <item name="tabTextColor">@color/text_color</item>
        <item name="tabBackground">@color/background</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="titleMarginTop">2dp</item>
    </style>

    <style name="PM.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/main_button_color</item>
        <item name="android:textColor">@color/main_button_text_color</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PM.Button.Main" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/MainButtonStyle.TextAppearance</item>
        <item name="android:textColor">@color/main_toolbar_text_color</item>
        <item name="shapeAppearance">@style/MainButtonStyle</item>
    </style>

    <style name="MainButtonStyle" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/main_button_corner</item>
        <item name="android:textColor">@color/main_toolbar_text_color</item>
    </style>

    <style name="MainButtonStyle.TextAppearance" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="PM.Button.Notification">
        <item name="cornerRadius">@dimen/button_notification_corner</item>
        <item name="android:backgroundTint">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">14dp</item>
    </style>

    <style name="PM.Text" parent="">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="PM.Nav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/PM.Nav.ThemeOverlay</item>
        <item name="itemTextAppearance">@style/PM.Nav.Text</item>
    </style>

    <style name="PM.Nav.ThemeOverlay" parent="">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnSurface">@color/text_color</item>
    </style>

    <style name="PM.Nav.Text" parent="">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PM.Text.ScreenTitle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="PM.Text.TrackName">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="PM.Text.TrackAuthorName">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="PM.Text.TrackDescription">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PM.Text.TrackDescription.Value">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:maxLength">40</item>
    </style>

    <style name="PM.Text.TrackDescription.Name">
        <item name="android:textColor">@color/pm_gray</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="PM.Text.Notification">
        <item name="android:textSize">@dimen/notification_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PM.Text.Notification.Title">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="PM.Text.ListTitle">
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">@integer/list_item_max_length</item>
    </style>

    <style name="PM.Text.ListTitle.Settings">
        <item name="android:paddingHorizontal">@dimen/default_padding</item>
        <item name="android:paddingVertical">@dimen/list_item_vertical_padding</item>
    </style>

    <style name="PM.Text.ListTitle.Grid">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">@integer/list_item_max_length</item>
    </style>

    <style name="PM.Text.ListTitle.Settings.Switch">
        <item name="materialThemeOverlay">@style/SwitchThemeOverlay</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PM.Text.Tab">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="SwitchThemeOverlay">
        <item name="colorSecondary">@color/primary_color</item>
    </style>

    <style name="PM.Text.ListSubTitle">
        <item name="android:textSize">@dimen/list_item_text_subtitle_size</item>
        <item name="android:textColor">@color/text_subtitle_color</item>
    </style>

    <style name="EditTextField">
        <item name="android:background">@drawable/rounded_bg</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingHorizontal">40dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textColor">@color/et_text_color</item>
        <item name="android:textColorHint">@color/et_hint_color</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="EditTextIcon">
        <item name="android:src">@drawable/ic_search</item>
        <item name="tint">@color/et_hint_color</item>
    </style>

    <style name="PM.ProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/primary_color</item>
    </style>

</resources>