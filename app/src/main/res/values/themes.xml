<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentInsetStartWithNavigation">@dimen/default_padding</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="titleMarginTop">2dp</item>
    </style>

    <style name="MainScreenButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="cornerRadius">@dimen/button_corner</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/default_padding</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_item</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/list_item_horizontal_padding</item>
        <item name="android:layout_marginBottom">@dimen/list_item_horizontal_padding</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SettingsItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_gravity">end|center</item>
    </style>

    <style name="SettingsItemSwitch" parent="SettingsItemIcon">
        <item name="android:layout_marginEnd">6dp</item>
    </style>


</resources>