<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        style="@style/Toolbar"
        app:title="@string/app_name"
        app:titleTextColor="@color/main_toolbar_text_color" />

        <Button style="@style/MainScreenButton"
            android:id="@+id/search_button"
            android:text="@string/search_button_txt"
            app:icon="@drawable/ic_search" />

        <Button style="@style/MainScreenButton"
            android:id="@+id/media_button"
            android:text="@string/media_button_txt"
            app:icon="@drawable/ic_media" />

        <Button style="@style/MainScreenButton"
            android:id="@+id/settings_button"
            android:text="@string/settings_button_txt"
            app:icon="@drawable/ic_settings" />

</com.google.android.material.appbar.AppBarLayout>
